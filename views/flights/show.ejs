<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Mongoose Flights</title>
</head>
<body>
    <section id="Flight-details">
      <h1>Flight Details</h1>
        <div>Airline: </div>
        <div><%= flight.airline %></div>
        <div>Flight Number: </div>
        <div><%= flight.flightNo %></div>
        <div>Departure Date: </div>
        <div><%= flight.departs %></div>
    </section>
    <section id="add-destination">  
        <h2>Add Destination</h2>
          <form id="add-destination" method="POST" action="/flights/<%= flight._id %>/destinations">
            <label>Airport:
              <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DAL">DAL</option>
                <option value="LAX">LAX</option>
                <option value="SAN">SAN</option>
                <option value="SEA">SEA</option>
              </select>
            </label>
            <label>Arrival:
              <input type="text" name="arrival">
            </label>
              <input type="submit" value="Add Destination">
          </form>
          <table>
            <thead>
              <tr>
                <th>Airport</th>
                <th>Arrival</th>
              </tr>
            </thead>
        </table>
      </section>
        <tbody>
          <% flight.destinations.forEach(function(destination) { %>
            <tr>
              <td><%= destination.airport %></td>
              <td><%= destination.arrival %></td>
            </tr>
          <% }); %>
        </tbody>

        <section id="add-tickets">
          <h2>Tickets</h2>
          <table>
            <thead>
              <tr>
                <th>Seat</th>
                <th>Price</th>
              </tr>
            </thead>
        </table>
      </section>
<tbody>
  <% ticket.forEach(function(ticket) { %>
    <tr>
      <td><%= ticket.seat %></td>
      <td><%= ticket.price %></td>
    </tr>
  <% }); %>
</tbody>
            <a href="/flights/<%= flight._id %>/tickets/new">Add New Ticket</a>
        </body>
</html>